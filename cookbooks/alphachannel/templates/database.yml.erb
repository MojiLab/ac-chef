general: &general
  adapter: postgresql
  min_messages: ERROR

development:
  <<: *general
  host: localhost
  username: <%= node['alphachannel']['db']['username'] %>
  database: <%= node['alphachannel']['db']['name'] %>

staging:
  <<: *general
  host: <%= node['alphachannel']['db']['host'] %>
  database: <%= node['alphachannel']['db']['name'] %>
  port: <%= node['alphachannel']['db']['port'] %>
  password: <%= node['alphachannel']['db']['password'] %>

production:
  <<: *general
  host: <%= node['alphachannel']['db']['host'] %>
  database: <%= node['alphachannel']['db']['name'] %>
  port: <%= node['alphachannel']['db']['port'] %>
